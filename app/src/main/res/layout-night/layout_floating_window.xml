<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_night_18"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="168dp"
            android:layout_height="142dp"
            android:src="@mipmap/ic_notice_clean"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:src="@drawable/icon_close_floating_window"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="8dp"
            android:layout_height="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/close_image"
            app:layout_constraintEnd_toEndOf="@+id/close_image"
            app:layout_constraintStart_toStartOf="@+id/close_image"
            app:layout_constraintTop_toTopOf="@+id/close_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="xxxxxxxxxx"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:theme="@style/SansitaBold"
        tools:ignore="SpUsage,UnusedAttribute" />

    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/ripple_primary_bg_12"
        android:elevation="3dp"
        android:gravity="center"
        android:text="@string/clean"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:theme="@style/SansitaBold"
        tools:ignore="SpUsage" />

</LinearLayout>